---
interface Props {
    firstTitle: string,
    firstLetter: string,
    emphasizedWords: string,
    restOfWords: string,
    resumeLink: string
    resume: string
}

const { firstTitle, firstLetter, emphasizedWords, restOfWords, resumeLink, resume } = Astro.props
---

<header class="w-full max-w-5xl pt-14 flex flex-col gap-2 md:pt-32">
    <div class="flex md:gap-6 justify-between flex-wrap">
        <div class="w-full max-w-2xl">
            <h1 class="text-3xl md:text-5xl font-black">{ firstTitle }</h1>
            <p class="my-4 text-lg text-slate-100">{ firstLetter } <span class="text-sky-500 font-medium">{ emphasizedWords}</span> { restOfWords }</p>
        </div>
        <img class="rounded-full w-44 h-44" src="perfil.png" alt="profile" />
    </div>
    <div class="my-4 flex gap-3">
        <a href="https://www.linkedin.com/in/facundo-caceres-dev/" target="_blank" class="bg-gradient-to-r from-cyan-500 to-blue-500 hover:bg-gradient-to-bl border-2 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">Linkedin</a>
        <a class="font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2 border-2 hover:text-cyan-500 hover:border-cyan-500" href={ resumeLink } target="_blank">{ resume }</a>
    </div>
</header>