<div class='hamburger-menu w-9 h-9 relative bg-cyan-500 flex flex-col justify-around rounded-full p-2 cursor-pointer'>
    <span class="block bg-white w-full h-1 transition"></span>
    <span class="block bg-white w-full h-1 transition"></span>
    <span class="block bg-white w-full h-1 transition"></span>
</div>

<style>
    .hamburger-menu.active-hamburger > span:first-child {
        width: 23px;
        position: absolute;
        left: 6px;
        transform: rotate(45deg)
    }

    .hamburger-menu.active-hamburger > span:nth-child(2) {
        opacity: 0;
    }

    .hamburger-menu.active-hamburger > span:nth-child(3) {
        width: 23px;
        position: absolute;
        left: 6px;
        transform: rotate(-45deg);
    }
</style>
<script>
    const pressHamburgerBtn = () => {
        document.querySelector('.hamburger-menu')?.classList.toggle('active-hamburger');
    }

    document.addEventListener('DOMContentLoaded', () => {
        document.querySelector('.hamburger-menu')?.addEventListener('click', pressHamburgerBtn);
    });
</script>