---
interface Props {
    imageLink: string,
    alt: string,
    title: string
}

const { imageLink, alt, title } = Astro.props;
---

<figure class="relative bg-slate-100 w-14 h-14 rounded-full shadow-md shadow-blue-500/50 flex  justify-center items-center">
    <img class="w-9" src={ imageLink } alt={ alt }/>
    <span class='text-white absolute -bottom-7 text-sm'>{ title }</span>  
</figure>