---
import Logo from '../../ui elements/logo/Logo.astro'
import HamburgerBtn from '../hamburgerBtn/HamburgerBtn.astro'
interface Props {
    project: string,
    about: string,
    contact: string,
    language: string,
    pageLink: string
}

const { project, about, contact, language, pageLink } = Astro.props
---

<nav class="flex justify-between items-center w-full max-w-5xl ">
    <Logo />
    <HamburgerBtn client:load/>
    <ul class="flex gap-3 md:text-lg font-medium py-2 md:gap-7">
        <a class="cursor-pointer hover:text-cyan-500 transition" href="#projects"><li>{ project }</li></a>
        <a class="cursor-pointer hover:text-cyan-500 transition" href="#about"><li>{ about }</li></a>
        <a class="cursor-pointer hover:text-cyan-500 transition" href="https://www.linkedin.com/in/facundo-caceres-dev" target="_blank" rel="noopener noreferrer"><li>{ contact }</li></a>
        <div class="flex gap-3 z-10 xl:flex-col xl:fixed xl:inset-y-1/2 xl:p-3 xl:pt-4 xl:right-2 xl:gap-5 xl:h-52 xl:transform xl:-translate-x-1/2 xl:-translate-y-1/2 xl:w-auto xl:bg-cyan-100/40 xl:rounded-2xl xl:shadow-md">
            <a href="https://github.com/facudam" target="_blank" title="Github" rel="noopener noreferrer" class="z-20">
                <img class="h-7 scale-125" src="github-black.svg" alt="github" />
            </a>
            <a href="https://www.linkedin.com/in/facundo-caceres-dev/" target="_blank" title="Linkedin" rel="noopener noreferrer">
                <img class="h-7 scale-125" src="linkedin.svg" alt="linkedin" />
            </a>
            <a href="mailto: facundocaceres.email@gmail.com" target="_blank" title="e-mail" rel="noopener noreferrer">
                <img class="h-7" src="gmail.svg" alt="gmail" />
            </a>
            <a href="https://www.tiktok.com/@facudam" target="_blank" title="TikTok" rel="noopener noreferrer">
                <img class="h-7" src="tiktok.svg" alt="tiktok" />
            </a>
        </div>
    </ul>
    <a class="hover:text-cyan-500 font-medium uppercase" href={ pageLink }>{ language }</a>
</nav>

