---
import Logo from '../../ui elements/logo/Logo.astro'
interface Props {
    project: string,
    about: string,
    contact: string,
    language: string,
    pageLink: string
}

const { project, about, contact, language, pageLink } = Astro.props
---

<nav class="flex justify-between items-center w-full max-w-5xl ">
    <Logo />
    <ul class="flex gap-3 font-medium py-2 md:gap-7">
        <a class="cursor-pointer hover:text-sky-600 transition" href="#projects"><li>{ project }</li></a>
        <a class="cursor-pointer hover:text-sky-600 transition" href="#about"><li>{ about }</li></a>
        <a class="cursor-pointer hover:text-sky-600 transition" href="https://www.linkedin.com/in/facundo-caceres-dev" target="_blank" rel="noopener noreferrer">
            <li>{ contact }</li>
        </a>
    </ul>
    <a class="hover:text-sky-600 font-medium uppercase" href={ pageLink }>{ language }</a>
</nav>

