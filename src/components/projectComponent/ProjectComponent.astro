---
interface Props {
    title: string,
    image: string,
    description: string,
    tecnologies: string[],
    codeLink: string,
    website?: string
}

const { title, image, description, tecnologies, codeLink, website } = Astro.props;
---

<div class="flex flex-col gap-5  md:flex-row ">
    <div class="h-56 overflow-hidden transition-all w-full max-w-md border border-stone-600 flex justify-center items-center rounded-md group bg-gradient-to-r from-blue-500 to-violet-900">
        <img class="group-hover:scale-110 transition duration-700 md:w-full" src={ image } />
    </div>
    <div>
        <div>
            <h3 class="text-xl font-black mb-2">{ title }</h3>
            <p>{ description }</p>
        </div>
        <div class="flex gap-2 flex-wrap my-3">
            {
                tecnologies.map(tecnology => (
                    <span class="px-2 py-1 rounded-lg border border-stone-600 bg-slate-900">{ tecnology }</span>
                ))
            }
        </div>

        <div class="flex gap-3 mt-5">
            <a class="flex justify-center items-center gap-1 w-20 px-4 py-1 rounded-lg bg-slate-300" href={ codeLink }>
                <img class="w-6" src="github.webp"/>
                <span class="text-slate-900 font-semibold">code</span>
            </a>
            {
                website &&
                    <a class="flex justify-center items-center gap-1 w-20 px-4 py-1 rounded-lg bg-slate-300" href={ website }>
                        <img class="w-6" src="eye.webp"/>
                        <span class="text-slate-900 font-semibold">Live</span>
                    </a>            
            }
        </div>
            
        
    </div>
</div>