---
interface Props {
    title: string,
    image: string,
    description: string,
    tecnologies: string[],
    codeLink: string,
    website?: string
}

const { title, image, description, tecnologies, codeLink, website } = Astro.props;
---

<div class="flex flex-col gap-5  md:flex-row ">
    <div class="h-56 overflow-hidden transition-all max-w-sm border border-stone-600 flex justify-center items-center rounded-md group bg-gradient-to-r from-blue-500 to-violet-900 md:w-full">
        <img class="group-hover:scale-110 transition md:w-full" src={ image } />
    </div>
    <div>
        <div>
            <h3 class="text-xl font-black mb-2">{ title }</h3>
            <p>{ description }</p>
        </div>
        <div class="flex gap-2 flex-wrap my-3">
            {
                tecnologies.map(tecnology => (
                    <span class="px-2 py-1 rounded-lg border border-stone-600 bg-slate-900">{ tecnology }</span>
                ))
            }
        </div>
        
        <a href={ codeLink }>code</a>
        {
            website && <a href={ website }>ver</a>            
        }
    </div>
</div>