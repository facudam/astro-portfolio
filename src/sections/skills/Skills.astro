---
import Technology from '../../components/technology/Technology.astro';

interface Props {
    title: string
}

const { title } = Astro.props;
---

<section class="w-full max-w-5xl mt-8">
    <h2 class="text-2xl font-black drop-shadow-md">{ title }</h2>
    <div class="mt-5 pb-6 flex flex-wrap gap-x-8 gap-y-10 justify-between md:justify-normal">
        <Technology imageLink='html.svg' alt='HTML' title='HTML' />
        <Technology imageLink='css.webp' alt='CSS' title='CSS' />
        <Technology imageLink='javascript.webp' alt='JavaScript' title='JavaScript' />
        <Technology imageLink='react.webp' alt='ReactJS' title='React.JS' />
        <Technology imageLink='typescript.webp' alt='TypeScript' title='TypeScript' />
        <Technology imageLink='tailwind.webp' alt='Taildwind' title='Tailwind' />
        <Technology imageLink='nodejs.svg' alt='Node.JS' title='Node.JS' />
        <Technology imageLink='sql.webp' alt='SQL' title='SQL' />
        <Technology imageLink='next-js.svg' alt='NextJS' title='Next.JS' />
        <Technology imageLink='git.svg' alt='git' title='Git' />
        <Technology imageLink='github.svg' alt='Github' title='Github' />
        <Technology imageLink='astro.svg' alt='Astro' title='Astro' />
    </div>
</section>