---
import Technology from '../../components/technology/Technology.astro';

interface Props {
    title: string
}

const { title } = Astro.props;
---

<section class="w-full max-w-5xl pt-8">
    <h2 class="text-xl font-semibold">{ title }</h2>
    <div class="pt-5 flex flex-wrap gap-6">
        <Technology imageLink='html.svg' alt='HTML' title='HTML' />
        <Technology imageLink='css.webp' alt='CSS' title='CSS' />
        <Technology imageLink='javascript.webp' alt='JavaScript' title='JavaScript' />
        <Technology imageLink='react.webp' alt='ReactJS' title='React.JS' />
        <Technology imageLink='typescript.webp' alt='TypeScript' title='TypeScript' />
        <Technology imageLink='tailwind.webp' alt='Taildwind' title='Tailwind' />
        <Technology imageLink='node.webp' alt='Node.JS' title='Node.JS' />
        <Technology imageLink='sql.webp' alt='SQL' title='SQL' />
        <Technology imageLink='next-js-logo.webp' alt='NextJS' title='Next.JS' />
        <Technology imageLink='git.webp' alt='git' title='Git' />
        <Technology imageLink='github.webp' alt='Github' title='Github' />
    </div>
</section>